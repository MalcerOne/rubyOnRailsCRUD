<p>
  <strong>Título:</strong>
  <%= @note.title %>
</p>
 
<p>
  <strong>Conteúdo:</strong>
  <%= @note.content %>
</p>

<%= link_to 'Editar', edit_note_path(@note) %> |
<%= link_to 'Deletar', note_path(@note),
              method: :delete,
              data: { confirm: 'Tem certeza que deseja deletar essa anotação?' } %> |
<%= link_to 'Voltar', notes_path %>